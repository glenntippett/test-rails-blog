<%# https://api.rubyonrails.org/v7.1.3.2/classes/ActionView/Helpers/FormHelper.html#method-i-form_with %>
<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <%# https://api.rubyonrails.org/v7.1.3.2/classes/ActiveModel/Errors.html#method-i-full_messages_for %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
